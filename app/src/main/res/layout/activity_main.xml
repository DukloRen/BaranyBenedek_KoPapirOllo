<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    >




        <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:id="@+id/yourImage"
            android:layout_centerHorizontal="true"
            android:src="@drawable/paper"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A te választásod"
            android:layout_centerHorizontal="true"
            android:id="@+id/yourChoiceText"
            android:textSize="20sp"
            android:layout_below="@+id/yourImage"
        />
        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
        android:id="@+id/computerImage"
            android:src="@drawable/paper"
            android:layout_below="@id/yourChoiceText"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A gép választása"
            android:layout_centerHorizontal="true"
            android:id="@+id/computerChoiceText"
            android:textSize="20sp"
            android:layout_below="@id/computerImage"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="Eredmény: Ember: 0 Computer: 0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150sp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50sp"
        android:gravity="center"
        >
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KŐ"
            android:id="@+id/rockButton"
        />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAPÍR"
            android:id="@+id/paperButton"
        />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OLLÓ"
            android:id="@+id/scissorsButton"
        />
    </LinearLayout>

</RelativeLayout>